{
  "name": "ts-rest-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "predev": "yarn run swagger",
    "prebuild": "yarn run swagger",
    "build": "tsc",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "dependencies": {
    "morgan": "^1.10.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^6.4.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.15",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^10.4.0",
    "tsoa": "^3.14.0"
  }
}
